<h1>Lista de todos los Apartamentos</h1>

<table>
	<!-- <caption>table title and/or explanatory text</caption> -->
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Torre</th>
			<th>Piso</th>
		</tr>
	</thead>
	<tbody>
		<!-- Solo EJECUTAR se utiliza <% %> -->
		<!-- MOSTRAR y EJECUTAR se utiliza <%= %> -->
		<% @apartamentos.each do |x| %>
		<tr>
			<td><%=x.nombre%></td>
			<td><%=x.torre%></td>
			<td><%=x.piso%></td>
			<td><%= link_to 'Ver datos del Apartamento', apartment_path(x) %></td>
		</tr>
		<%end%>
	</tbody>
</table>