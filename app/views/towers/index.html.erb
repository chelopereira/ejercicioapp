<h1>Lista de todas las Torres</h1>

<table>
	<!-- <caption>table title and/or explanatory text</caption> -->
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Portero</th>
		</tr>
	</thead>
	<tbody>
		<!-- Solo EJECUTAR se utiliza <% %> -->
		<!-- MOSTRAR y EJECUTAR se utiliza <%= %> -->
		<% @torres.each do |torre| %>
		<tr>
			<td><%=torre.nombre%></td>
			<td><%=torre.portero%></td>
			<td><%= link_to 'Ver datos de la Torre', tower_path(torre) %></td>
		</tr>
		<%end%>
	</tbody>
</table>